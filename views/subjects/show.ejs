<% layout('/layouts/boilerplate') %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-8">
                <div class="card-body ">
                    <h6 class="card-title">
                        <%=subject.subName%>
                    </h6>
                    <p class="card-text">
                        <small class="text-muted">
                            <%=subject.subCode%>
                        </small>
                    </p>
                    <p class="card-text row">
                        <small>
                            Credits : <%=subject.credits%></small>
                        <small>semNo : <%= subject.semNo %></small>

                    </p>
                </div>
            </div>
        </div>
    </div>

    <a class="btn btn-success" href="/subjects">All subjects</a>
