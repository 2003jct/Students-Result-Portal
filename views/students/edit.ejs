<% layout('/layouts/boilerplate') %>
    <div class="row mt-4">
        <h1 class="text-center">Edit Information</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/students/<%= student._id %>?_method=PUT" method="post">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input id="name" type="text" class="form-control" name="student[name]" value="<%= student.name %>"
                        readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="rollNo">Roll Number:</label>
                    <input id="rollNo" type="text" class="form-control" name="student[rollNo]"
                        value="<%= student.rollNo %>" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="fName">Father Name</label>
                    <input id="fName" type="text" class="form-control" name="student[fName]"
                        value="<%= student.fName %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="phoneNo">Phone Number:</label>
                    <input id="phoneNo" type="tel" class="form-control" name="student[phoneNo]"
                        value="<%=student.phoneNo%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="dob">Date Of Birth</label>
                    <input id="dob" type="date" class="form-control" name="student[dob]"
                        value="<%= student.dob ? student.dob.toISOString().substring(0,10) :" "%>">
                </div>
                <div class="mb-3">
                    <div class="row"><button class="btn btn-warning col-md-5 m-2">Submit</button>
                        <a href="/students/<%= student.id %>/edit/image" class="btn btn-info col-md-5 m-2">Edit
                            Image</a>
                    </div>
                </div>
            </form>

        </div>
    </div>