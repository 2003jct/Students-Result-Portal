<% layout('/layouts/boilerplate') %>
    <div class="row mt-4">
        <h1 class="text-center">Edit Information</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/students/<%= student._id %>/image?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input id="name" type="text" class="form-control" name="student[name]" value="<%= student.name %>"
                        disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="rollNo">Roll Number:</label>
                    <input id="rollNo" type="text" class="form-control" name="student[rollNo]"
                        value="<%= student.rollNo %>" disabled>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="file">upload Image</label>
                    <input id="file" type="file" class="form-control" name="image" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-warning">Submit</button>
                </div>
                <div class="text-secondary mb-3">(or)</div>
            </form>
            <form action="/students/<%= student.id %>/image?_method=DELETE" method="post">
                <button class="btn btn-info">Delete Image</button>
            </form>
        </div>
    </div>