<% layout('/layouts/boilerplate') %>
    <div class="row mt-4">
        <h1 class="text-center">Student Registration</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/users/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required autofocus>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="rollNo">Roll Number</label>
                    <input class="form-control" type="text" id="rollNo" name="rollNo" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                </div>
                <button class="btn btn-success btn-block">Register</button>
            </form>
        </div>
    </div>