<% layout('/layouts/boilerplate') %>
    <div class="row mt-4">
        <h1 class="text-center">Student Login</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/users/login" method="POST" class="validated-form" novalidate>
                <div class="mb-6">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required autofocus>
                </div>
                <div class="mb-6">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                </div>
                <button class="btn btn-info btn-block mt-1">Login</button>
            </form>
        </div>
    </div>